@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
}

<ul>
  @foreach(Client Client in Model)
  {
      <li>@Html.ActionLink($"{Client.Name}", "Details", new { id = Client.ClientId }) | @Client.Stylist.Name</li>
  }
</ul>

@if(@ViewBag.StylistList.Count == 0)
{
  <h3>At least one stylist must be added before you can add clients!</h3>
}
@if(@ViewBag.StylistList.Count > 0)
{
  <p>@Html.ActionLink("Add new Client", "Create")</p>
}
<p>@Html.ActionLink("Home","Index","Home")</p>